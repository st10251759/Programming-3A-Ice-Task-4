@model Hotel_Booking_Prog_7311_Ice_Task_4.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<!-- Page Header -->
<div class="container-fluid page-header mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 200px">
        <h1 class="display-4 text-white mb-3 mt-0 mt-lg-5">Edit Customer</h1>
        <div class="d-inline-flex mb-lg-5">
            <p class="m-0 text-white"><a class="text-white" asp-controller="Home" asp-action="Index">Home</a></p>
            <p class="m-0 text-white px-2">/</p>
            <p class="m-0 text-white"><a class="text-white" asp-controller="Customers" asp-action="Index">Customers</a></p>
            <p class="m-0 text-white px-2">/</p>
            <p class="m-0 text-white">Edit</p>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Edit Customer</h4>
                    <span class="badge bg-primary">ID: @Model.CustomerId</span>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="CustomerId" />
                        
                        <!-- Personal Information -->
                        <div class="mb-4">
                            <h5 class="card-subtitle mb-3 pb-2 border-bottom">Personal Details</h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label">First Name</label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label">Last Name</label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Contact Information -->
                        <div class="mb-4">
                            <h5 class="card-subtitle mb-3 pb-2 border-bottom">Contact Information</h5>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control" type="email" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                    <input asp-for="Phone" class="form-control" id="phoneInput" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <!-- Address Information -->
                        <div class="mb-4">
                            <h5 class="card-subtitle mb-3 pb-2 border-bottom">Address Information</h5>
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label">Address</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </span>
                                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <!-- Customer Activity Summary -->
                        <div class="mb-4">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-chart-line me-2 text-primary"></i>Customer Activity Summary
                                    </h6>
                                    <div class="row g-3 mt-2">
                                        <div class="col-sm-4">
                                            <div class="d-flex align-items-center">
                                                <div class="activity-icon">
                                                    <i class="fas fa-calendar-check"></i>
                                                </div>
                                                <div class="ms-3">
                                                    <div class="small text-muted">Total Bookings</div>
                                                    <div class="fs-5 fw-semibold" id="totalBookings">--</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="d-flex align-items-center">
                                                <div class="activity-icon">
                                                    <i class="fas fa-bed"></i>
                                                </div>
                                                <div class="ms-3">
                                                    <div class="small text-muted">Upcoming Stays</div>
                                                    <div class="fs-5 fw-semibold" id="upcomingStays">--</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="d-flex align-items-center">
                                                <div class="activity-icon">
                                                    <i class="fas fa-dollar-sign"></i>
                                                </div>
                                                <div class="ms-3">
                                                    <div class="small text-muted">Total Spent</div>
                                                    <div class="fs-5 fw-semibold" id="totalSpent">--</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-outline-primary ms-2">
                                    <i class="fas fa-info-circle me-2"></i>View Details
                                </a>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Page Header */
    .page-header {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/header-bg.jpg');
        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    /* Card */
    .card {
        border-radius: 10px;
        overflow: hidden;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1rem 1.5rem;
    }

    /* Card Subtitle */
    .card-subtitle {
        color: #1a73e8;
        font-weight: 600;
    }

    /* Activity Icons */
    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        background-color: #e8f0fe;
        color: #1a73e8;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
    }

</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            // Phone number formatter
            var phoneInput = document.getElementById('phoneInput');
            if (phoneInput) {
                phoneInput.addEventListener('input', function (e) {
                    var input = e.target.value.replace(/\D/g, '');
                    var formatted = '';
                    
                    if (input.length > 0) {
                        formatted += '(' + input.substring(0, 3);
                    }
                    if (input.length > 3) {
                        formatted += ') ' + input.substring(3, 6);
                    }
                    if (input.length > 6) {
                        formatted += '-' + input.substring(6, 10);
                    }
                    
                    e.target.value = formatted;
                });
            }
            
            // Load customer activity data via AJAX (simulated)
            setTimeout(function() {
                // In a real application, this would be fetched from the server
                // This is just for demonstration purposes
                $('#totalBookings').text('5');
                $('#upcomingStays').text('1');
                $('#totalSpent').text('$1,249.95');
            }, 500);
        });
    </script>
}